{
	"name": "modul-is/form",
	"type": "library",
	"description": "Simplified nette forms",
	"keywords": ["php", "nette", "form"],
	"homepage": "https://github.com/modul-is/form",
	"license": "MIT",
    "require":
    {
		"php": "^8",
        "nette/finder": "^2.5",
        "nette/forms": "^3.0",
        "nette/security": "^3.1",
        "nasext/dependent-select-box": "^5.1",
        "nette/application": "^3.1"
    },
    "require-dev":
    {
        "phpstan/phpstan-nette": "^1",
		"modul-is/coding-standard": "^4",
        "kravcik/nette-macro-fontawesome": "^4",
        "nette/tester": "^2.1"
    },
    "autoload":
    {
        "classmap": ["src/"]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
